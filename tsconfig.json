{
    "compilerOptions": {
        "rootDir": "src",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["es2015", "es2016", "es2017", "es2018", "DOM"],

        // Enhance Strictness
        "strict": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "strictBindCallApply": false,
    },
    "include": ["src/"],
    "exclude": [
        "**/__tests__"
    ]
}