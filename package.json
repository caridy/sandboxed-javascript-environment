{
  "name": "@caridy/sjs",
  "version": "0.2.13",
  "description": "Experimental JS Library to create a sandboxed JavaScript environment in browsers and node",
  "module": "lib/index.js",
  "types": "types/index.js",
  "scripts": {
    "build": "ttsc && rollup -c",
    "start": "ttsc -w & http-server",
    "test": "jest --runInBand --no-cache --config ./jest.config.js",
    "publish": "npm publish --access public",
    "debug": "karma start karma.config.js --browsers Chrome",
    "debug:firefox": "karma start karma.config.js --browsers Firefox",
    "karma": "karma start karma.config.js --single-run --browsers ChromeHeadless,FirefoxHeadless"
  },
  "files": [
    "lib/",
    "types/"
  ],
  "author": "Caridy Pati√±o <caridy@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "chokidar": "^3.0.1",
    "http-server": "^0.11.1",
    "istanbul-api": "^2.0.6",
    "jest": "^24.9.0",
    "jsdom": "^15.2.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.2",
    "karma-safari-launcher": "^1.0.0",
    "puppeteer": "^3.1.0",
    "rollup": "^1.21.3",
    "ts-jest": "^24.2.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12"
  }
}
