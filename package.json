{
  "name": "@salesforce/near-membrane",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "description": "JavaScript Near Membrane Library to create a sandboxed environment",
  "module": "lib/index.js",
  "types": "types/index.js",
  "scripts": {
    "clean": "lerna run clean --stream",
    "build": "lerna run build --stream",
    "start": "http-server ./examples",
    "test": "jest --runInBand --no-cache --config ./jest.config.js",
    "test:bundlesize": "bundlesize",
    "publish": "npm publish --access public",
    "debug": "karma start karma.config.js --browsers Chrome",
    "karma": "karma start karma.config.js --single-run --browsers ChromeHeadless,FirefoxHeadless"
  },
  "files": [
    "lib/",
    "types/"
  ],
  "author": "Caridy Pati√±o <caridy@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/jest": "^24.0.23",
    "bundlesize": "^0.18.0",
    "chokidar": "^3.0.1",
    "http-server": "^0.11.1",
    "istanbul-api": "^2.0.6",
    "jest": "^24.9.0",
    "jsdom": "^15.2.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^1.3.0",
    "karma-jasmine": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.2",
    "karma-safari-launcher": "^1.0.0",
    "lerna": "^3.22.1",
    "puppeteer": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.21.3",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^24.2.0",
    "tslib": "^2.0.1",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=12"
  },
  "bundlesize": [
    {
      "path": "lib/index.min.js",
      "maxSize": "10 kB",
      "compression": "none"
    },
    {
      "path": "lib/browser-realm.min.js",
      "maxSize": "13 kB",
      "compression": "none"
    },
    {
      "path": "lib/node-realm.min.js",
      "maxSize": "11 kB",
      "compression": "none"
    }
  ]
}
